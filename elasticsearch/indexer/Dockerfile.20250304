# 実行環境用ベースイメージ
FROM python:3.9-buster AS base

# ビルド環境用ベースイメージ（amd64を使用）
FROM --platform=linux/amd64 python:3.9-buster AS build

# 環境変数の設定
ENV DEBIAN_FRONTEND=noninteractive
ENV DEBCONF_NOWARNINGS=yes
ENV PATH="/opt/mssql-tools/bin:${PATH}"

# 必要なライブラリをインストール
RUN apt-get update && \
    apt-get install -y apt-utils apt-transport-https gnupg curl && \
    curl https://packages.microsoft.com/keys/microsoft.asc | apt-key add - && \
    curl https://packages.microsoft.com/config/debian/10/prod.list > /etc/apt/sources.list.d/mssql-release.list && \
    apt-get update && \
    ACCEPT_EULA=Y apt-get install -y msodbcsql17 mssql-tools unixodbc-dev

# ドライバーファイルの確認
RUN ls -alh /opt/mssql-tools/bin/
RUN ls -alh /usr/lib/x86_64-linux-gnu/libmsodbcsql-17.so*

# 実行環境に戻り、コピー操作を実施
FROM base

# 環境変数の設定を再定義
ENV DEBIAN_FRONTEND=noninteractive
ENV DEBCONF_NOWARNINGS=yes
ENV PATH="/opt/mssql-tools/bin:${PATH}"
ENV PYTHONUNBUFFERED=1

WORKDIR /app

COPY requirements.txt .
COPY index_data.py .

# 必要なファイルをビルドステージからコピー
COPY --from=build /opt/mssql-tools/ /opt/mssql-tools/
COPY --from=build /usr/lib/x86_64-linux-gnu/ /usr/lib/x86_64-linux-gnu/

# デバッグのためドライバーファイルを確認
RUN ls -alh /usr/lib/x86_64-linux-gnu/libmsodbcsql-17.so* || true
RUN ls -alh /opt/mssql-tools/bin/

# 必要なパッケージをインストール
RUN apt-get update && \
    apt-get install -y unixodbc mecab libmecab-dev mecab-ipadic-utf8 swig && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Pythonパッケージをインストール
RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# verbose実行オプションを追加
CMD ["python", "-v", "/app/index_data.py"]
